# Pet Trading Bot - Environment Configuration
# Copy this to .env and fill in your actual values

# MongoDB Connection
MONGODB_URL=mongodb+srv://admin:password@cluster.mongodb.net/pet_trading?retryWrites=true&w=majority

# Discord Bot
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_guild_id_here

# API Configuration
API_SECRET=your-super-secret-key-change-this-in-production
API_URL=http://localhost:8000
API_HOST=0.0.0.0
API_PORT=8000

# Roblox Bot Account
ROBLOX_BOT_ACCOUNT=BotUsername
ROBLOX_BOT_USER_ID=123456789

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development
